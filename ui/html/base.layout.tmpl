{{define "base"}}
<!DOCTYPE html>
<html lang='en'>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{template "title" .}} - Claire Wang</title>
    <!-- Link to the CSS stylesheet and favicon -->
    <link rel='stylesheet' href='/static/css/main.css'>
    <link rel='shortcut icon' href='/static/img/me.png' type='image/png'>
    <!-- Also link to some fonts hosted by Google -->
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Ubuntu+Mono:400,700'>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-MGT8BYYEHF"></script>
    <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-MGT8BYYEHF');
    </script>
</head>
<body>
    <!-- heading across all pages -->
    <header>
        <img src="./static/img/me.png">
        <p><a href='/'>hi, my name is claire wang</a></p>
        <p>to all the coffee and late nights</p>
    </header>
    <!-- nav bar across all pages -->
    <nav>
        <a href="/">home</a>
        <a href="/work">work</a>
        <a href="/life">life</a>
        <a href="/contact">contact</a>
    </nav>
    <!-- main content -->
    <section>
        {{template "body" .}}
    </section>
    <!-- optional side bar -->
    {{block "sidebar" .}}
    {{end}}
    <!-- footer with fine prints across all page -->
    {{template "footer" .}}
    <!-- And include the JavaScript file -->
    <script src="/static/js/main.js" type="text/javascript"></script>
</body>
</html>
{{end}}